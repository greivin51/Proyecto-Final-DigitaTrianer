@model DigitalTrainer.Models.Rutina

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4" style=" color:#FCFCFC"> Rutinas</h1>

<h4 style=" font-size:20px; color:#FCFCFC">Agregar Rutinas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Musculo" style="font-size:20px; color:#FCFCFC;" class="control-label"></label>
                <input asp-for="Musculo" class="form-control"/>
                       
                <span asp-validation-for="Musculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" style="font-size:20px; color:#FCFCFC;" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>/>
                       
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="font-size:20px;" type="submit" value="Enviar" class="btn btn-primary" />
                <input style="font-size:20px;" type="reset" value="Cancelar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="font-size:20px;"> Volver a la lista</a>
</div>

