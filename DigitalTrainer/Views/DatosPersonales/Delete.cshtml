@model DigitalTrainer.Models.DatosPersonales
@{
    ViewData["Title"] = "Delete";  // Establece el título de la página como "Delete"
}

<!-- Encabezado principal de la página -->
<h1>Delete</h1>  <!-- Título principal -->
<!-- Mensaje de confirmación -->
<h3>Are you sure you want to delete this?</h3>  <!-- Pide confirmación al usuario -->
<!-- Contenedor principal -->
<div>
    <h4>DatosPersonales</h4>  <!-- Muestra el nombre del modelo -->
    <hr />  <!-- Línea divisoria horizontal -->
    <!-- Lista de definición para mostrar los datos -->
    <dl class="row">
        <!-- dl = definition list, con estilo de fila de Bootstrap -->
        <!-- ID de los datos personales -->
        <dt class="col-sm-2">
            <!-- dt = definition term (etiqueta) -->
            @Html.DisplayNameFor(model => model.IdDatosPersonales)  <!-- Muestra el nombre de la propiedad -->
        </dt>
        <dd class="col-sm-10">
            <!-- dd = definition description (valor) -->
            @Html.DisplayFor(model => model.IdDatosPersonales)  <!-- Muestra el valor -->
        </dd>

        <!-- Nombre -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <!-- Teléfono -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <!-- Correo electrónico -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CorreoElectronico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>

        <!-- Fecha de nacimiento -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>

        <!-- Género -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>

        <!-- Peso -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Peso)
        </dd>

        <!-- Altura -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Altura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Altura)
        </dd>

        <!-- Contraseña (oculta en un sistema real) -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)  <!-- Nota: En producción, no mostrarías la contraseña real -->
        </dd>
    </dl>

    <!-- Formulario para confirmar la eliminación -->
    <form asp-action="Delete">
        <!-- Enviará a la acción Delete del controlador -->
        <input type="submit" value="Delete" class="btn btn-danger" />  <!-- Botón rojo de eliminación -->
        <a asp-action="Index">Back to List</a>  <!-- Enlace para volver al listado sin eliminar -->
    </form>
</div>