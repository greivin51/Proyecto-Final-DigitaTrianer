@model DigitalTrainer.Models.Batidos

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center my-4" style=" color:#FCFCFC">Batidos</h1>
<h4 style=" font-size:20px; color:#FCFCFC">Agregar Batidos</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" style="font-size:20px; color:#FCFCFC" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredientes" style="font-size:20px; color:#FCFCFC" class="control-label"></label>
                <input asp-for="Ingredientes" class="form-control" />
                <span asp-validation-for="Ingredientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="font-size:20px; color:#FCFCFC" type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"></a>
</div>

